meta {
  name: Create User
  type: http
  seq: 1
}

post {
  url: {{scheme}}://{{host}}:{{port}}/api/v1/users
  body: json
  auth: inherit
}

body:json {
  {
    "username": "{{$randomUserName}}",
    "fullName": "{{$randomFullName}}",
    "email": "{{$randomEmail}}"
  }
}

vars:post-response {
  userId: res.body.id
  username: res.body.username
  fullName: res.body.fullName
  email: res.body.email
}

assert {
  res.status: eq 201
}
